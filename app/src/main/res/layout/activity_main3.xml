<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_file1"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="Button_file1_click"
                android:text="@string/button_file1back"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/text_file1"
                android:layout_width="60pt"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="10sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_file2"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/button_file1back"
                android:onClick="Button_file2_click"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_file2"
                android:layout_width="60pt"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="10sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_start"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/button_start"
                android:onClick="Button_start_click"
                android:textSize="16sp"/>

        </TableRow>

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="16sp"/>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>